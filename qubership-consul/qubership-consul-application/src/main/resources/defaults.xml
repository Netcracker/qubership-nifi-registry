<included>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="CONSOLE_LOG_PATTERN_BASE" value="%clr([%d{yyyy-MM-dd'T'HH:mm:ss.SSS}]){faint}%clr([%-5p]) %clr([thread=%-15.15t]){faint} %clr([class=%-60.60c{59}] [method=%-30.30M] [traceId=%-16X{traceId:--}] [spanId=%-16X{spanId:--}]){magenta}"/>
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN_BASE} %m%n"/>
    <property name="CONSOLE_LOG_PATTERN_BASIC" value="%clr([%d{yyyy-MM-dd'T'HH:mm:ss.SSS}]){faint}%clr([%-5p]) %m%n"/>
</included>
